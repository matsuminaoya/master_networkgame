{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C: gcc アクティブなファイルのビルド",
      "type": "shell",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "macOS用に設定されたCビルドタスク"
    }
  ]
}
